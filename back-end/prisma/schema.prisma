generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @unique @default(autoincrement())
  socket       String[]
  username     String    @unique
  email        String    @unique
  channel_list Channel[]
  Message      Message[]
  friends      Int[]
  blocked_user Int[]

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  img_url String @default("placeholder")

  user_status String @default("offline")

  win           Int     @default(0)
  lose          Int     @default(0)
  elo           Int     @default(400)
  success_one   Boolean @default(false)
  success_two   Boolean @default(false)
  success_three Boolean @default(false)

  firstName       String?
  lastName        String?
  TFA_secret_hash String?
  TFA_activated   Boolean @default(false)
}

model Channel {
  id        Int       @id @unique @default(autoincrement())
  name      String?
  personal  Boolean?  @default(true)
  public    Boolean?  @default(false)
  user_list User[]
  messages  Message[]
  admins    Int[]
  banned    Int[]
  owner     Int?
  password  String?   @default("")
}

model Message {
  id          Int       @id @unique @default(autoincrement())
  content     String?
  sender      User      @relation(fields: [userId], references: [id])
  sender_name String?
  recipient   Channel   @relation(fields: [channelId], references: [id])
  date        DateTime? @default(now())
  userId      Int
  channelId   Int
}
